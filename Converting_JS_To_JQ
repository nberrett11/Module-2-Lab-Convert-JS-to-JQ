<!DOCTYPE><head>
<meta charset="UTF-8">
<title>jsToJQ</title>

<script>
function alertHover(){
  document.getElementById("area").style.backgroundColor = "green";
  alert("Close me to turn the box green.");
}

function reset(){
   document.getElementById("area").style.backgroundColor = "#953674"; 
}
</script>

</head>

<style>

#area{
  width: 200px;
  height: 200px;
  background-color: #953674;
}

</style>

<body>

<div id="area" onmouseenter="alertHover();"></div>
<br><button id="reset" onclick="reset();">Reset</button>

</body>

</html>
